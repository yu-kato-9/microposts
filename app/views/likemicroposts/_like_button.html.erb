<% if current_user.already_registered?(micropost) %>
  <%= form_for(current_user.likemicroposts.find_by(micropost_id: micropost.id), html: {method: :delete}) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'お気に入りから削除', class: 'btn btn-danger btn-sx' %>
  <% end %>
<% else %>
  <%= form_for(current_user.likemicroposts.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'お気に入りに追加', class: 'btn btn-primary btn-sx' %>
  <% end %>
<% end %> 